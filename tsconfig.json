{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src/services/thumbhash.js"],
  "exclude": [
    "node_modules/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".bundle/*",
    "coverage",
    "ios",
    "android",
    ".gradle",
    "web"
  ]
}
